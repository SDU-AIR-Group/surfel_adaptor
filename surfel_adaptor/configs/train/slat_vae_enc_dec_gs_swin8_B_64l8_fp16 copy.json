{
    "models": {
        "encoder": {
            "name": "ElasticSLatEncoder",
            "args": {
                "resolution": 128,
                "in_channels": 128,
                "model_channels": 768,
                "latent_channels": 8,
                "num_blocks": 8,
                "num_heads": 8,
                "mlp_ratio": 4,
                "attn_mode": "swin",
                "window_size": 8,
                "use_fp16": true
            }
        },
        "decoder": {
            "name": "ElasticSLatGaussianDecoder",
            "args": {
                "resolution": 128,
                "model_channels": 768,
                "latent_channels": 8,
                "num_blocks": 8,
                "num_heads": 8,
                "mlp_ratio": 4,
                "attn_mode": "swin",
                "window_size": 8,
                "use_fp16": true,
                "representation_config": {
                    "lr": {
                        "_xyz": 1.0,
                        "_features_dc": 1.0,
                        "_opacity": 1.0,
                        "_scaling": 1.0,
                        "_rotation": 0.1
                    },
                    "perturb_offset": true,
                    "voxel_size": 1.953e-1,
                    "num_gaussians": 32,
                    "model_scale": 25.0,
                    "2d_filter_kernel_size": 0.1,
                    "3d_filter_kernel_size": 9e-4,
                    "scaling_bias": 4e-3,
                    "opacity_bias": 0.1,
                    "scaling_activation": "softplus"
                }
            }
        }
    },
    "dataset": {
        "name": "TerrainFeat2Render",
        "args": {
            "image_size": 512,
            "model": "sonata",
            "resolution": 128
        }
    },
    "trainer": {
        "name": "SLatVaeGaussianTrainer",
        "args": {
            "max_steps": 1000000,
            "batch_size_per_gpu": 4,
            "batch_split": 2,
            "optimizer": {
                "name": "AdamW",
                "args": {
                    "lr": 1e-4,
                    "weight_decay": 0.0
                }
            },
            "ema_rate": [
                0.9999
            ],
            "fp16_mode": "inflat_all",
            "fp16_scale_growth": 0.001,
            "elastic": {
                "name": "LinearMemoryController",
                "args": {
                    "target_ratio": 0.75,
                    "max_mem_ratio_start": 0.5
                }
            },
            "grad_clip": {
                "name": "AdaptiveGradClipper",
                "args": {
                    "max_norm": 1.0,
                    "clip_percentile": 95
                }
            },
            "i_log": 100,
            "i_sample": 10000,
            "i_save": 10000,
            "loss_type": "l1",
            "lambda_ssim": 0.2,
            "lambda_lpips": 0.2,
            "lambda_kl": 1e-06,
            "regularizations": {
                "lambda_vol": 100.0,
                "lambda_opacity": 0.001
            }
        }
    }
}